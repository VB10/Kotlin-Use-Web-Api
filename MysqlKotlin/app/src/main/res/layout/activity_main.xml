<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hardwareandro.vb.mysqlkotlin.MainActivity">


    <Button
        android:id="@+id/btn"
        android:width="200dp"
        android:height="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:onClick="getData"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.669"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/_etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/_etPass"
        app:layout_constraintStart_toStartOf="@+id/_etPass"
        app:layout_constraintEnd_toEndOf="@+id/_etPass"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/_etPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textShortMessage|textPersonName"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintStart_toStartOf="@+id/btn"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/btn" />


</android.support.constraint.ConstraintLayout>
